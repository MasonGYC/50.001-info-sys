    <ProgressBar
        android:id="@+id/layout_profile_grid_imageView_progBar"
        android:layout_width="@dimen/progress_bar_width"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_centerInParent="true"/>

</RelativeLayout>