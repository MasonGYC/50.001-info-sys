<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Viewpager -->
    <include layout="@layout/layout_center_viewpager"/>

    <RelativeLayout
        android:id="@+id/community_account_settings_relLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top toolbar -->
        <RelativeLayout
            android:id="@+id/community_account_settings_relLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey">

            <include layout="@layout/snippet_account_settings_toolbar" />

        </RelativeLayout>

        <!-- Centre -->
        <RelativeLayout
            android:id="@+id/community_account_settings_relLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/community_account_settings_relLayout2"
            android:layout_marginBottom="50dp">

            <include
                android:id="@+id/community_account_settings_center"
                layout="@layout/layout_account_settings_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <!-- Bottom navigation bar -->
        <include layout="@layout/layout_navbar_bottom"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/bottom_navbar_height"
            android:layout_width="match_parent" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>