<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_toolbar_height"
        android:layout_alignParentTop="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/community_feed_top_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_toolbar_height"
                android:background="@color/grey">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- following -->
                    <TextView
                        android:id="@+id/wardrobe_top_toolbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:text="Wardrobe"
                        android:textSize="20sp"
                        android:textStyle="italic"/>

                    <!-- basket -->
                    <ImageView
                        android:id="@+id/wardrobe_delete"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@+id/wardrobe_basket"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_delete_outline_24" />

                    <ImageView
                        android:id="@+id/wardrobe_basket"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_shopping_basket_24" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </RelativeLayout>

</merge>