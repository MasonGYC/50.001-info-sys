<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/activity_search_relLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/snippet_searchbar" />

        </RelativeLayout>


        <ListView
            android:id="@+id/activity_search_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_search_relLayout1"
            android:layout_marginBottom="@dimen/bottom_navbar_height">

        </ListView>

    </RelativeLayout>

    <include layout="@layout/layout_navbar_bottom"/>

</RelativeLayout>