<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_profile_relLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top toolbar -->
        <include layout="@layout/snippet_profile_toolbar" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_profile_relLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_profile_relLayout1">

        <!-- Center -->
        <include layout="@layout/layout_profile_center" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/fragment_profile_progress_bar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <!-- Bottom Navbar -->
    <include layout="@layout/layout_navbar_bottom" />

</RelativeLayout>